# ============================================================================
# .env.example — Copy this to .env and fill in your values.
# NEVER commit .env to git — it contains secrets.
# .env is already in .gitignore.
# ============================================================================

# ── PostgreSQL ───────────────────────────────────────────────────────────────
POSTGRES_DB=myshop
POSTGRES_USER=myshop_user
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_PORT=5432

# ── MongoDB (Phase 3) ────────────────────────────────────────────────────────
MONGO_INITDB_DATABASE=myshop
MONGO_PORT=27017

# ── Redis (Phase 4) ──────────────────────────────────────────────────────────
REDIS_PORT=6379
REDIS_PASSWORD=change_me_in_production

# ── Kafka KRaft Mode (Phase 5) ────────────────────────────────────────────────
KAFKA_PORT=9092
KAFKA_CONTROLLER_PORT=9093
# Generate with: docker run --rm confluentinc/cp-kafka kafka-storage random-uuid
KAFKA_CLUSTER_ID=change_me_run_kafka_storage_uuid

# ── Elasticsearch (Phase 6) ──────────────────────────────────────────────────
ES_PORT=9200

# ── Backend ──────────────────────────────────────────────────────────────────
BACKEND_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# JWT Secret: minimum 32 characters (256 bits for HS256).
# Generate with: openssl rand -hex 32
JWT_SECRET=change_me_minimum_32_characters_long_secret_key
# Access token TTL: 15 minutes (milliseconds)
JWT_EXPIRY_MS=900000
# Refresh token TTL: 7 days (milliseconds)
JWT_REFRESH_EXPIRY_MS=604800000

# ── Frontend ─────────────────────────────────────────────────────────────────
FRONTEND_PORT=3000

# ── Azure (Phase 7) ──────────────────────────────────────────────────────────
AZURE_REGISTRY_NAME=
AZURE_RESOURCE_GROUP=
AZURE_LOCATION=eastus
